# Kafka Web Tool v2.0 Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=kafka_web_tool
DB_USERNAME=postgres
DB_PASSWORD=kafka-web-tool-change-me
DB_SSL_MODE=disable
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Server Settings
SERVER_PORT=8080
SERVER_ADDRESS=0.0.0.0
CONTEXT_PATH=/api/v1

# Frontend Settings
FRONTEND_PORT=3000
NODE_ENV=production

# Environment
ENVIRONMENT=development
SPRING_PROFILES_ACTIVE=development

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs
LOG_MAX_FILE_SIZE=100MB
LOG_MAX_HISTORY=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Authentication
AUTH_ENABLED=true
JWT_SECRET=your-256-bit-secret-change-me-in-production
JWT_EXPIRATION=86400
AUTH_SESSION_TIMEOUT=3600

# HTTPS/TLS (Production)
ENABLE_HTTPS=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
SSL_TRUST_STORE=/path/to/trust.jks
SSL_TRUST_STORE_PASSWORD=changeme

# =============================================================================
# KAFKA CONFIGURATION (Optional - can be configured via UI)
# =============================================================================
# Default Kafka Connection (Optional)
DEFAULT_KAFKA_BOOTSTRAP_SERVERS=localhost:9092
DEFAULT_KAFKA_SECURITY_PROTOCOL=PLAINTEXT
DEFAULT_KAFKA_SASL_MECHANISM=PLAIN
DEFAULT_KAFKA_SASL_USERNAME=
DEFAULT_KAFKA_SASL_PASSWORD=

# Consumer Settings
CONSUMER_SESSION_TIMEOUT_MS=30000
CONSUMER_MAX_POLL_RECORDS=500
CONSUMER_AUTO_COMMIT_INTERVAL=5000
CONSUMER_DEFAULT_TIMEOUT_MS=30000

# Producer Settings
PRODUCER_BATCH_SIZE=16384
PRODUCER_LINGER_MS=5
PRODUCER_BUFFER_MEMORY=33554432
PRODUCER_ACKS=all
PRODUCER_RETRIES=3

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
# Thread Pool Settings
THREAD_POOL_CORE_SIZE=10
THREAD_POOL_MAX_SIZE=50
THREAD_POOL_QUEUE_CAPACITY=100

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Connection Pool
HTTP_CONNECTION_TIMEOUT=5000
HTTP_READ_TIMEOUT=30000
HTTP_MAX_CONNECTIONS=100

# JVM Settings
JAVA_OPTS=-Xms512m -Xmx1g -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
# Metrics
METRICS_ENABLED=true
PROMETHEUS_ENABLED=true
METRICS_EXPORT_INTERVAL=60

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Image Registry
DOCKER_REGISTRY=
DOCKER_TAG=latest

# Build Settings
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Mode
DEBUG_MODE=false
HOT_RELOAD=false
MOCK_KAFKA=false

# Database Development
DB_SHOW_SQL=false
DB_DDL_AUTO=update

# Frontend Development
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_WS_URL=ws://localhost:8080/ws

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production Security
SECURE_COOKIES=true
CSRF_PROTECTION=true
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Production Performance
CONNECTION_POOL_SIZE=50
CACHE_SIZE=10000
SESSION_TIMEOUT=1800

# Production Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=kafka-web-tool
APM_ENVIRONMENT=production

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@yourdomain.com

# Slack Notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#kafka-alerts

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables here
# CUSTOM_SETTING=value
